{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "moduleResolution": "bundler",
    "module": "esnext",
    "target": "es2022",
    "lib": ["es2022", "dom"],
    "jsx": "react-jsx",
    "types": ["node", "react"],
    "verbatimModuleSyntax": false,
    "incremental": false
  },
  "include": ["src/**/*"]
}
